extends layout

block content
  h1 #{title}
  form(method='post', action='/bids/edit')
    .form-group
      input(name='bid_id', type='hidden', value='#{bid_id}')
    .form-group
      label Amount:
      input(name='amount', type='text')
    input(type='submit', name='submit', value='Save')

    a(href='/passengers/bids') Back
