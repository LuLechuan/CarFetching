doctype html
html
  head
    title= title
    link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.css")
    link(rel='stylesheet', href='/stylesheets/style_nav.css')

  body
  block navbar
    if (currentUser)
      if (currentDriver)
        .topnav
          a.active(href='/driverHome') Home
          a(href='/rides/add_ride') Create Ride
          a(href='/passengers/rides') All Current Rides
          a(href='/rides/own_rides') Own Current Rides As Driver
          a(href='/bids/own_bids') Current Bids For Own Rides As Driver
          a(href='/passengers/bids') Own Current Bids As Passenger
          a(href='/drivers/history') Past Rides As Driver
          a(href='/passengers/history') Past Bids As Passenger
          a(href='/logout') Logout
      else
        .topnav
          a.active(href='/passengerHome') Home
          a(href='/passengers/rides') All Current Rides
          a(href='/passengers/bids') Own Current Bids As Passenger
          a(href='/passengers/history') Past Bids As Passenger
          a(href='/logout') Logout
    else
      .topnav
        a.active(href='/') Home
        a(href='/login') Login
        a(href='/register') Sign Up
        a(href='/about') About





  block content
    if success_msg
      p #{success_msg}
    if error_msg
      p #{error_msg}

  script(src='/bower_components/jquery/dist/jquery.js')
  script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
  script(src='/js/main.js')
