extends layout

block content
  h1 #{title}
  form(method='post', action='/api/drivers')
    .form-group
      label ID:
      input(name='id', type='text')
    .form-group
      label Name:
      input(name='name', type='text')
    .form-group
      label Age:
      input(name='age')
    .form-group
      label Sex:
      input(name='sex', type='text')
    .form-group
      label carNumber:
      input(name='carNumber', type='text')
    input(type='submit', name='submit', value='Save')

    a(href='/passengers/bids') Back
