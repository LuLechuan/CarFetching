extends ./layout.jade

block content
  h1 #{title}
  if errors
    for each in errors
        p.error #{each.msg}
  form(method='post', action='/loginAction')
    .form-group
      label Username:
      input(name='username', type='text')
    .form-group
      label Password:
      input(name='password', type='text')
    input(type='submit', name='submit', value='Login')

    p Don't have an account?
    a(href='/register') register here
