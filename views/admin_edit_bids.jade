block content
    h1 #{title}
    form(method='POST', action='/admin/bids/edit/#{bid.bid_id}')
        .form-group
            label Bid id:
            input(name='bid_id', type='text',value = '#{bid.bid_id}')
        .form-group
            label Passenger:
            input(name='passenger', type='text', value = '#{bid.passenger}')
        .form-group
            label Car:
            input(name='car', type='text', value = '#{bid.car}')
        .form-group
            label Start time:
            input(name='start_time', , type='text', value = '#{bid.start_time}')
        .form-group
            label Source:
            input(name='source', , type='text', value = '#{bid.source}')
        .form-group
            label Destination:
            input(name='destination', , type='text', value = '#{bid.destination}')
        .form-group
            label Amount:
            input(name='amount', , type='text', value = '#{bid.amount}')
        .form-group
            label Status:
            input(name='status', , type='text', value = '#{bid.status}')
        input(type='submit', name='submit', value='Save Changes')
        a(class="btn btn-tiny btn-default" href='/admin/bids') Back